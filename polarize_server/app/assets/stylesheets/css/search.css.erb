body {
  background-image: url(<%= asset_path "bg5.png" %>);
  font-family: 'Verdana', sans-serif;
}

h1 {
  font-family: 'Rambla', sans-serif;
  font-weight: bold;
  font-size: 44px;
  line-height: 50px;
  text-shadow: 2px 2px 3px #ffffff;
  margin: 0px 0px;
}

h2 {
  font-family: 'Rambla', sans-serif;
  font-weight: bold;
  text-align: center;
  font-size: 40px;
  text-transform: uppercase;
  margin-top: 10px;
}

h2.positive {
  color: #c83737;
}

h2.negative {
  color: #2c5aa0;
}

#query {
  font-size: 18px;
  width: 100%;
  height: 25px;
}

#hint {
  font-size: 11px;
  color: #444444;
}

#searchbar {
  margin-top: 10px;
}

#helpbutton, #aboutbutton {
  text-align: center;
  text-shadow: 1px 1px 0px #ffffff;
  margin-top: 15px;
}

.results {
  display: table;
  margin: 18px 0px;
}

.block, .actualresult {
  display: table-cell;
}

.actualresult {
  height: 100%;
  padding-left: 5px;
}

.block {
  width: 14px;
  height: 100%;
}

.positive.block {
  background-color: #c83737;
}

.negative.block {
  background-color: #2c5aa0;
}

.article {
  margin-top: 10px;
}

.articlelink {
  font-weight: bold;
  text-decoration: none;
}

a.articlelink {
  color: #333333;
}

a:hover.articlelink {
  color: #333399;
}

.sentence {
  font-family: 'Oleo Script', cursive;
  font-size: 24px;
  line-height: 24px;
}

.positive.sentence {
  color: #c83737;
}

.negative.sentence {
  color: #2c5aa0;
}

.below {
  margin-bottom: 30px;
}

.topic {
  font-family: 'Rambla', sans-serif;
  font-weight: bold;
  font-size: 28px;
  line-height: 28px;
  text-align: center;
}

.bigtopic {
  font-size: 60px;
  line-height: 60px;
  text-transform: uppercase;
  margin-top: 5px;
}

.positive-title {
  color: #c83737;
}

.negative-title {
  color: #2c5aa0;
}

.whitebutton {
	-moz-box-shadow: 2px 2px 6px 0px #a3a3a3;
	-webkit-box-shadow: 2px 2px 6px 0px #a3a3a3;
	box-shadow: 2px 2px 6px 0px #a3a3a3;
	background: -webkit-gradient( linear, left top, left bottom, color-stop(0.05, #f1f1f1), color-stop(1, #e5e5e5) );
	background: -moz-linear-gradient( center top, #f1f1f1 5%, #e5e5e5 100% );
	filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#f1f1f1', endColorstr='#e5e5e5');
	background-color: #f1f1f1;
  border: 0px;
	display: inline-block;
	color: #2e2e2e;
	font-family: Verdana;
	font-size: 16px;
	font-weight: normal;
	font-style: normal;
  width: 100%;
	height: 30px;
	line-height: 30px;
	text-align: center;
	text-shadow: 1px 1px 0px #ffffff;
}

.whitebutton:hover {
	background:-webkit-gradient( linear, left top, left bottom, color-stop(0.05, #e5e5e5), color-stop(1, #f1f1f1) );
	background:-moz-linear-gradient( center top, #e5e5e5 5%, #f1f1f1 100% );
	filter:progid:DXImageTransform.Microsoft.gradient(startColorstr='#e5e5e5', endColorstr='#f1f1f1');
	background-color:#e5e5e5;
}

.whitebutton:active {
	position:relative;
	top:1px;
}

.ui-progressbar {
  position: relative;
}
.progress-label {
  position: absolute;
  left: 50%;
  top: 4px;
  font-weight: bold;
  text-shadow: 1px 1px 0 #fff;
}

